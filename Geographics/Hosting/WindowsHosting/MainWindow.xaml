<Window x:Class="WindowsHosting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsHosting"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <StackPanel>
        <Button Name="btnStart" Click="Start" Margin="20">Start</Button>
        <Button IsEnabled="False" Name="btnStop" Click="Stop" Margin="20">Stop</Button>

        <Button Name="InProcStartButton" Click="InProcStart" Margin="20">In-Proc Service</Button>
        <TextBlock Name="InProcTextBlock"></TextBlock>
    </StackPanel>
</Window>
